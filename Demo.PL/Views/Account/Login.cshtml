
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input class="text" asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<br />
			<input class="text" type="password" asp-for="Password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" >
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
		<br />
		<p><a asp-action="ForgetPassword"> Forget Password</a></p>
	</div>
</div>
<div class=" text-danger" asp-validation-summary="All"></div>
@section VaildationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}

