@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">	
		<form asp-action="SignUp" >
			<input class="text" type="text" asp-for="FirstName" placeholder="First Name" >
			<span asp-validation-for="FirstName" class="text-danger"></span>
			<br />
			<br />
			<input class="text" type="text" asp-for="LastName" placeholder="Last Name" >
			<span asp-validation-for="LastName" class="text-danger"></span>
			<br />
			<br />
			<input class="text" asp-for="Email" placeholder="Email" >
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<br />
			<input class="text" type="password" asp-for="Password" placeholder="Password" >
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			<br />
			<input class="text" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" >
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<br />
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<span asp-validation-for="IsAgree" class="text-danger"></span>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
		<br />
		<br />
		<div class=" text-danger" asp-validation-summary="All"></div>


	</div>
</div>

@section VaildationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}