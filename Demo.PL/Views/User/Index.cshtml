@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if(Model.Count() > 0)
{
    <div class="m-2">
        <form class="row  offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="User's Email'" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
            </div>
        </form>
    </div>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FirstName)</td>
                <td>@Html.DisplayNameFor(U => U.LastName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FirstName</td>
                    <td>@User.LastName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(',', User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="User.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>There Is No User</h1>
}
