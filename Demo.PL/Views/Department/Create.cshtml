@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<br />
<form asp-action="Create" class="">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation"/>
        <span class="text-danger" asp-validation-for="DateOfCreation"></span>
    </div>
    <br />
    <input type="submit" value="Submit" class="btn btn-primary"/>
    <a asp-action="@nameof(Index)" class="btn btn-light ms-2">Back To List</a>
</form>